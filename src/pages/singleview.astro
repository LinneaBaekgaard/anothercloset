---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export async function getStaticPaths() {
  const curl = "https://ngzpzxuvxcobhkrwrgpi.supabase.co/rest/v1/kjole?select=*";

  const apikey = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im5nenB6eHV2eGNvYmhrcndyZ3BpIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDcwNjQ1MjgsImV4cCI6MjA2MjY0MDUyOH0.INYStzoZSVH73X4YGeNOih21F7NaJX1O57r9C3CAxww";

  const options = {
    headers: {
      apikey: apikey,
    },
  };

  const response = await fetch(curl, options);
  const data = await response.json();

  return data.map((data) => {
    return {
      params: { id: data.id },
      props: { data },
    };
  });
}

const { id } = Astro.params;
const { data } = Astro.props;
---

<Layout>
  <Header />

  <main class="singleview">
    <div class="back-link">
      <a href="/kjoler">
        <span class="arrow">&#8592;</span> Gå tilbage til udvalg
      </a>
    </div>

    <div class="image-container">
      <img src={`/img/${data.image}`} alt={data.imgdescr} />
    </div>

    <div class="details">
      <h2>Str. {data.size}</h2>
      <h1>{data.name}</h1>
      <p class="description">{data.description}</p>

      <div class="info">
        <p><strong>Materiale:</strong><br />{data.materiale}</p>
        <p><strong>Vask:</strong><br />{data.vask}</p>
      </div>

      <a class="availability-btn" href="#">se tilgængelighed</a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .singleview {
    max-width: 600px;
    margin: 0 auto;
    font-family: "Monument-Regular", sans-serif;
    padding: 20px;
  }

  .back-link a {
    text-decoration: none;
    color: black;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 5px;
    margin-bottom: 20px;
  }

  .arrow {
    font-size: 20px;
  }

  .image-container img {
    width: 100%;
    height: auto;
    margin-bottom: 20px;
  }

  .details h1 {
    font-size: 22px;
    margin: 0;
  }

  .details h2 {
    font-size: 18px;
    color: #333;
    margin-bottom: 10px;
  }

  .description {
    font-size: 14px;
    line-height: 1.6;
    color: #222;
    margin-bottom: 20px;
  }

  .info p {
    font-size: 14px;
    margin-bottom: 10px;
    border-top: 1px solid #ccc;
    padding-top: 10px;
  }

  .availability-btn {
    background-color: #ff4d00;
    color: white;
    padding: 10px 20px;
    border-radius: 20px;
    display: inline-block;
    text-align: center;
    text-decoration: none;
    margin-top: 20px;
    font-weight: bold;
  }
</style>
