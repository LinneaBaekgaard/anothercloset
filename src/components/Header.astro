<header>
  <p class="tekst-top">Vores fælles klædeskab</p>
  <img class="logostack" src="/img/logostack.png" alt="Logo" />
  <img class="logo" src="/img/logo.png" alt="Logo" />

  <div id="sideMenu" class="side-menu">
    <div class="menu-label" id="menuButton">menu</div>
    <a href="#">bliv medlem</a>
    <a href="#">find dit tøjfællesskab</a>
    <a href="#">kjoleskabet</a>
    <a href="#">spørgsmål og svar</a>
    <img class="logo-menu" src="/img/logostack.png" alt="Logo" />
  </div>

  <script>
    const menuButton = document.getElementById("menuButton");
    const sideMenu = document.getElementById("sideMenu");
    const closeButton = document.getElementById("closeButton");

    menuButton.addEventListener("click", () => {
      sideMenu.classList.toggle("open");
    });

    document.addEventListener("click", (e) => {
      if (!sideMenu.contains(e.target) && !menuButton.contains(e.target)) {
        sideMenu.classList.remove("open");
      }
    });
  </script>
