---
const {
  dresses = [],
  mode = "slider", // "slider" eller "grid"
  imageWidth = "60%",
  class: customClass = "",
} = Astro.props;
---

{
  mode === "slider" ? (
    <div class={`slider-wrapper ${customClass}`}>
      <button class="nav left">
        <img src="/img/Pil-left.png" alt="Forrige" />
      </button>

      <div class="slider">
        {dresses.map((dress, index) => (
          <div
            class={`slide ${index === 0 ? "active-slide" : "inactive-slide"}`}
            data-index={index}
          >
            <img
              src={dress.src}
              alt={dress.label}
              class="dress-image"
              style={`width: ${imageWidth}`}
            />
            <div class="text-container">
              <span class="label">{dress.label}</span>
              <span class="size">{dress.size}</span>
            </div>
          </div>
        ))}
      </div>

      <button class="nav right">
        <img src="/img/Pil-right.png" alt="NÃ¦ste" />
      </button>
    </div>
  ) : (
    <div class={`grid-view ${customClass}`}>
      {dresses.map((dress) => (
        <div class="grid-item">
          <img
            src={dress.src}
            alt={dress.label}
            class="dress-image"
            style={`width: ${imageWidth}`}
          />
          <div class="text-container">
            <span class="label">{dress.label}</span>
            <span class="size">{dress.size}</span>
          </div>
        </div>
      ))}
    </div>
  )
}

<script is:client type="module">
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".slider-wrapper").forEach((sliderWrapper) => {
      const slides = sliderWrapper.querySelectorAll(".slide");
      let currentIndex = 0;

      const showSlide = (index) => {
        slides.forEach((slide, i) => {
          slide.style.display = i === index ? "block" : "none";
        });
      };

      const nextSlide = () => {
        currentIndex = (currentIndex + 1) % slides.length;
        showSlide(currentIndex);
      };

      const prevSlide = () => {
        currentIndex = (currentIndex - 1 + slides.length) % slides.length;
        showSlide(currentIndex);
      };

      showSlide(currentIndex);

      sliderWrapper
        .querySelector(".nav.right")
        ?.addEventListener("click", (e) => {
          e.stopPropagation();
          nextSlide();
        });

      sliderWrapper
        .querySelector(".nav.left")
        ?.addEventListener("click", (e) => {
          e.stopPropagation();
          prevSlide();
        });
    });
  });
</script>

<style>
  .slider-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    max-width: 500px;
    margin: 0 auto;
  }

  .slider {
    position: relative;
    width: 90%;
    text-align: center;
  }

  .slide {
    width: 100%;
    margin-top: 20px;
    display: none;
  }

  .active-slide {
    display: block;
  }

  .dress-image {
    transition: transform 0.3s ease;
  }

  .text-container {
    margin-top: 1rem;
  }

  .label {
    display: block;
    background-color: var(--purple-color);
    font-family: var(--monument-reg);
    font-size: var(--size-h3);
    color: black;
    padding: 5px 25px;
    border-radius: 20px;
    width: 230px;
    margin: 0 auto;
  }

  .size {
    display: inline-block;
    background-color: var(--purple-color);
    font-family: var(--monument-reg);
    font-size: var(--size-h3);
    color: black;
    padding: 0.3rem 1rem;
    border-radius: 20px;
    margin-bottom: 40px;
  }

  .nav {
    background-color: transparent;
    border: none;
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
  }

  .nav.left {
    left: 5%;
    z-index: 1;
  }

  .nav.right {
    right: 5%;
    z-index: 1;
  }

  .nav img {
    width: 10px;
    height: auto;
  }

  .grid-view {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 20px;
    margin-top: 1rem;
  }

  .grid-item img {
    width: 100%;
    border-radius: 10px;
  }
</style>
