---
const { data } = Astro.props;
import "../style/global.css";
---

<article class="kjoler-card">
  <a href={`../singleview/${data.id}`}>
    <img src={"/img/" + data.img} alt={data.imgdescr} />
    <p>
      <span class="name">{data.brand}</span><br /><span class="size"
        >str. {data.size}</span
      >
    </p>
  </a>
</article>

<style>
  .kjoler-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 100%;
    margin: 10px 0;
  }

  img {
    height: auto;
    width: 90%;
  }

  .size,
  .name {
    background-color: var(--purple-color);
    font-family: var(--monument-reg);
    font-size: var(--size-p2);
    padding: 3px 10px;
    border-radius: 15px;
  }

  a {
    text-decoration: none;
    color: #000;
  }
</style>
