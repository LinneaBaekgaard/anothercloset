---
// AccordionItem.astro
import BilledeSlider from "./BilledeSlider.astro";

const {
  title = "Fredericia",
  date = "Torsdag den 15. maj kl. 20.00 - 21.30",
  location = "Cafe Mauritz, Sjællandsgade 33, Fredericia",
  dresses = [],
} = Astro.props;
---

<div class="accordion-item">
  <button class="accordion-header">
    {title}<span class="plus">+</span>
  </button>

  <div class="accordion-content">
    <p class="undertitel">NÆSTE SALON ER:</p>
    <p>{date}<br />{location}</p>

    <button class="btn1">modtag invitation</button>

    <p>se udvalgte styles</p>
    <div class="pil_img">
      <img src="/img/Pil-kopi.webp" alt="pil" class="toggle-styles" />
    </div>

    <div class="extra_content">
      <p>Udvalgte styles fra {title}</p>

      <div class="mobile-only">
        <BilledeSlider dresses={dresses} mode="slider" imageWidth="60%" />
      </div>
      <div class="desktop-only">
        <BilledeSlider dresses={dresses} mode="grid" imageWidth="100%" />
      </div>
    </div>
  </div>
</div>

<style>
  .mobile-only {
    display: block;
  }
  .desktop-only {
    display: none;
  }

  @media (min-width: 768px) {
    .mobile-only {
      display: none;
    }
    .desktop-only {
      display: block;
    }
  }

  .accordion-item {
    border-bottom: 1px solid black;
    font-family: "Monument", sans-serif;
  }

  .accordion-header {
    width: 100%;
    text-align: left;
    padding: 1rem;
    padding-left: 2rem;
    font-size: var(--size-h1);
    background: none;
    border: none;
    display: flex;
    justify-content: space-between;
    font-family: var(--archivo);
    cursor: pointer;
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 1s ease;
    padding: 0 2rem;
    font-family: var(--monument-reg);
    font-size: var(--size-p2);
  }

  .accordion-content .undertitel {
    font-family: var(--archivo);
    font-size: var(--size-h3);
  }

  .plus {
    padding-right: 40px;
  }

  .btn1 {
    background-color: var(--green-color);
    color: #000;
    border: none;
    padding: 15px 20px;
    font-size: var(--font-size-p2);
    font-weight: 600;
    cursor: pointer;
    border-radius: 30px;
    margin: 30px 0 45px 0;
  }

  .pil_img {
    width: 100%;
    height: auto;
  }

  .pil_img img {
    width: 20px;
    height: auto;
  }

  .extra_content {
    overflow: hidden;
  }

  .style-gallery {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-top: 20px;
  }

  .style-gallery img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }

  .accordion-item.open-bg {
    background-color: var(--yellow-color);
  }

  .extra_content h2 {
    font-size: var(--font-size-h2);
    line-height: var(--line-height-h2);
    color: var(--text-color);
    margin-top: 20px;
  }

  .extra_content p {
    font-size: var(--font-size-p2);
    line-height: var(--line-height-p2);
    color: var(--text-color);
    font-family: Archivo, sans-serif;
    font-weight: 550;
  }

  /* .opdeler {
    width: 120%;
    height: 1px;
    background-color: black;
    margin: 20px 0;
  } */
</style>
